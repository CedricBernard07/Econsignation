{% extends 'base.html.twig' %}

{% block title %}Parcours Page 5{% endblock %}

{% block content %}

    <script src="{{ asset('js/pannellum.js') }}"></script>
    <link rel="stylesheet" href="{{ asset('css/pannellum.css') }}">

    <body>
    <h1>√âtape 5 : S√©l√©ctionner le point de vigilance √† controler</h1>

    <div id="response-container">
        <span id="message-box"></span>
        <img id="response-image" src="{{ asset('images/DJbach√©.jpg') }}" class="overlay-image" style="display: none;">
        <a href="{{ path('app_bilan') }}" id="next-button" class="next-button" style="display: none;">Voir le bilan</a>
    </div>

    {#    tableau repr√©senatnt la fiche de consignation#}
    <div class="container">
        <!-- Tableau des op√©rations -->
        <div class="parcours-table-container">
            <div class="parcours-table-title">Suivi de la consignation</div>
            <table class="parcours-table">
                <tr>
                    <th>N¬∞</th>
                    <th>Emplacement</th>
                    <th>Op√©ration</th>
                    <th>Validation</th>
                </tr>
                {% for row in tableData %}
                    <tr>
                        <td>{{ row['N¬∞'] }}</td>
                        <td>{{ row['Emplacement'] }}</td>
                        <td>{{ row['Op√©ration'] }}</td>
                        <td class="validation">
                            {% set etapeKey = 'etape' ~ row['N¬∞'] %} {# G√©n√®re "etape1", "etape2", etc. #}
                            {% if score[etapeKey] is defined %}
                                {% if score[etapeKey] == 1 %}
                                    ‚úÖ
                                {% elseif score[etapeKey] == -1 %}
                                    ‚ùå
                                {% endif %}
                            {% endif %}
                        </td>
                    </tr>
                {% endfor %}
            </table>
        </div>

        <!-- Image panoramique -->
        <div id="panorama"></div>
    </div>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            let attemptDone = false; // Bloquer apr√®s un essai

            let viewer = pannellum.viewer('panorama', {
                "type": "equirectangular",
                "panorama": "{{ asset('models/SalleCC.jpg') }}",
                "autoLoad": true,
                "yaw": 0,
                "pitch": 0,
                "hfov": 150,
                "mouseZoom": false,
                "disableZoom": true,
                "showControls": false,
                "keyboardZoom": false,
                "hotSpots": [
                    { "pitch": 11, "yaw": -8, "type": "custom", "cssClass": "hotspot-frame", "id": "frame1", "createTooltipFunc": createHotspot, "createTooltipArgs": { id: "frame1", correct: true }},
                    { "pitch": -20, "yaw": -20, "type": "custom", "cssClass": "hotspot-frame", "id": "frame2", "createTooltipFunc": createHotspot, "createTooltipArgs": { id: "frame2", correct: false }},
                    { "pitch": 14, "yaw": 37, "type": "custom", "cssClass": "hotspot-frame", "id": "frame3", "createTooltipFunc": createHotspot, "createTooltipArgs": { id: "frame3", correct: false }},
                    { "pitch": -11, "yaw": 9, "type": "custom", "cssClass": "hotspot-frame", "id": "frame4", "createTooltipFunc": createHotspot, "createTooltipArgs": { id: "frame4", correct: false }}
                ]
            });

            /* Fonction pour g√©rer les clics sur les cadres */
            function createHotspot(hotSpotDiv, args) {
                hotSpotDiv.setAttribute("id", args.id);

                hotSpotDiv.addEventListener("click", function () {
                    if (attemptDone) return; // Bloquer apr√®s un essai

                    let frameId = args.id;

                    if (args.correct) {
                        showMessage("Correct", "green");
                        updateEtape5(1);
                        hotSpotDiv.classList.add("correct-frame"); // Bordure verte
                    } else {
                        showMessage("Incorrect", "red");
                        hotSpotDiv.classList.add("incorrect-frame"); // Bordure rouge
                        updateEtape5(-1);
                    }

                    highlightCorrectFrame(); // Afficher la bonne r√©ponse en vert apr√®s un clic
                    attemptDone = true; // Bloquer les clics suppl√©mentaires
                    document.getElementById("next-button").style.display = "inline-block"; // Afficher le bouton suivant
                });
            }

            /* Fonction pour afficher le message */
            function showMessage(text, color) {
                let messageBox = document.getElementById("message-box");
                let responseImage = document.getElementById("response-image");

                messageBox.textContent = text;
                messageBox.style.color = color;
                messageBox.style.fontSize = "30px";
                messageBox.style.fontWeight = "bold";
                messageBox.style.marginTop = "10px";
                messageBox.style.display = "block";

                responseImage.style.display = "block"; // Afficher l'image

                reloadTable(); // üîÑ Mettre √† jour la colonne Validation apr√®s mise √† jour du score
            }

            /* Met en vert la bonne r√©ponse apr√®s un clic sur n'importe quelle case */
            function highlightCorrectFrame() {
                setTimeout(() => { // Petit d√©lai pour s'assurer que l'√©l√©ment est bien disponible
                    let correctFrame = document.querySelector('#frame1');
                    if (correctFrame) {
                        console.log("Mise en √©vidence du bon cadre");
                        correctFrame.classList.add("correct-frame");
                    } else {
                        console.error("Le cadre correct n'a pas √©t√© trouv√© !");
                    }
                }, 100);
            }

            /* Mise √† jour du score si la r√©ponse est correcte */
            function updateEtape5(value) {
                fetch("{{ path('update_score') }}", {
                    method: "POST",
                    headers: {
                        "Content-Type": "application/json",
                        "X-Requested-With": "XMLHttpRequest"
                    },
                    body: JSON.stringify({ etape: "etape5" , value:value}) // Mise √† jour de l'√©tape 5
                })
                    .then(response => response.json())
                    .then(data => {
                        console.log("Score mis √† jour :", data.score);
                        reloadTable(); // üîÑ Mettre √† jour la colonne Validation apr√®s mise √† jour du score
                    })
                    .catch(error => console.error("Erreur de mise √† jour du score :", error));
            }
        });
    </script>

    </body>

    <style>
        /* Style des cadres */
        .hotspot-frame {
            width: 100px;
            height: 100px;
            border: 3px solid white;
            position: absolute;
            transform: translate(-50%, -50%);
            pointer-events: auto;
            cursor: pointer;
        }

        /* ‚úÖ Bordure verte pour la bonne r√©ponse */
        .correct-frame {
            border: 5px solid green !important;
        }

        /* ‚ùå Bordure rouge pour les mauvaises r√©ponses */
        .incorrect-frame {
            border: 5px solid red !important;
        }

        /* Superposition de l'image √† gauche sur le panorama */
        .overlay-image {
            position: absolute;
            top: 35%;    /*Positionnement vertical, augmenter pour d√©caler vers le bas */
            left: 25%;  /* Positionnement horizontal, augmenter pour d√©caler vers la droite */
            width: 500px;  /* Largeur de l'image */
            z-index: 100;
            display: none;
            border: 2px solid black;
            background-color: white;
            padding: 5px;
            box-shadow: 3px 3px 10px rgba(0, 0, 0, 0.5);
        }
    </style>

{% endblock %}
