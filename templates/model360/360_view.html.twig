    <script>
        document.addEventListener("DOMContentLoaded", function () {
            let panoramaElement = document.getElementById("panorama");

            // Bloquer complÃ¨tement le menu contextuel Panellum
            document.addEventListener("contextmenu", function (event) {
                if (event.target.closest("#panorama")) {
                    event.preventDefault();
                }
            });

            // VÃ©rifier et supprimer le lien contextuel Panellum aprÃ¨s son chargement
            function removePannellumContextMenu() {
                let pannellumMenu = document.querySelector(".pnlm-about-msg");
                if (pannellumMenu) {
                    pannellumMenu.remove(); // ðŸ”¹ Supprime l'Ã©lÃ©ment affichant le lien Panellum
                }
            }

            // Attendre le chargement de Panellum et supprimer le menu
            setTimeout(removePannellumContextMenu, 500); // ðŸ”¹ DÃ©lai pour s'assurer que Panellum est bien chargÃ©

            // Surveiller les changements de DOM pour dÃ©tecter si Panellum rÃ©affiche son menu
            let observer = new MutationObserver(removePannellumContextMenu);
            observer.observe(document.body, { childList: true, subtree: true });

            // DÃ©sactiver tous les Ã©vÃ©nements liÃ©s au menu contextuel
            panoramaElement.addEventListener("mousedown", function (event) {
                if (event.button === 2) { // Clic droit
                    event.preventDefault();
                }
            });

            panoramaElement.addEventListener("mouseup", function (event) {
                if (event.button === 2) {
                    event.preventDefault();
                }
            });
        });
    </script>


